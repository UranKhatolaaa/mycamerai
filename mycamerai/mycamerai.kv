#:kivy 1.0.9
#:import CameraOpenCV camera_widget

<Capture>
    name: "Capture"
    CameraOpenCV:
        id: camera
        index:0
        allow_stretch: True
        keep_ratio: True
        play: True
        on_picture_taken: self.picture_taken(*args)
        MDIconButton:
            icon: "guy-fawkes-mask"
            id: anonymous_icon
            pos: root.width * 0.1, root.height*0.8
            user_font_size: (dp(96), dp (96))
            theme_text_color: "Custom"
            text_color: (1, 1, 0, 1) if self.parent.faces_detection_active == True else (0,0,1,1)
            on_press: self.parent.switch_face_detection(self)

<Editor>:
    name: "Editor"
    AsyncImage:
        id: image
        allow_stretch: True
        keep_ratio: True
        source: self.parent.source
        MDIconButton:
            icon: "account-off-outline"
            id: anonymous_icon
            pos: root.width * 0.1, root.height*0.8
            user_font_size: (dp(96), dp (96))
            theme_text_color: "Primary"
            on_press: root.removing_people_enable()

        MDIconButton:
            icon: "camera-outline"
            id: go_back_to_capture
            pos: root.width * 0.9, root.height*0.8
            user_font_size: (dp(96), dp (96))
            theme_text_color: "Primary"
            on_press: root.go_back_to_capture_screen()
